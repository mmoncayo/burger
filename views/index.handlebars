<div class="burgerMenu">
    <h2>Burgers To Devour</h2>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
            {{id}}.{{burger_name}} <button class="devourBtn" data-id="{{id}}">Devour it!</button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="burgersDevoured">
    <h2>Devoured Burgers</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
            {{id}}.{{burger_name}}
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>

<div class="add-burger">
    <form class="addBurger">
        <div class="form-group">
            <input type="text" id="burger"></input>
            <br>
            <button type="submit" id="submitBtn">Add Burger!</button>
        </div>
    </form>
</div>